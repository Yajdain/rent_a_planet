<div class="container">
  <div class="row justify-content-center">
  <% if @planetoffer.photo.attached? %>
    <%= cl_image_tag @planetoffer.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
    <h2 class="text-light text-center"><%= @planetoffer.name %></h2>
    <p class="card-text text-light text-center">Gravité : <%= @planetoffer.gravite %> m/s²</p>
    <p class="card-text text-light text-center">Superficie : <%= @planetoffer.superficie %> M km²</p>
    <p class="card-text text-light text-center">Rayon : <%= @planetoffer.rayon %> km</p>
    <p class="card-text text-light text-center">Prix : <%= @planetoffer.price %> M €</p>
  </div>
</div>
