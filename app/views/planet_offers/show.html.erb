<ul class="d-flex justify-content-center">
  <% if @planetoffer.photo.attached? %>
  <li class="booking-card" style="background-image: url(<%= @planetoffer.photo.url %>);  background-repeat: no-repeat;
    background-color: black;
    background-size: contain;
    background-position-y: inherit;">
  <% end %>
    <div class="book-container">
      <div class="content">
        <button><%= link_to "Réserver", new_planet_offer_reservation_path(@planetoffer), class: "btn" %></button>
      </div>
    </div>
    <div class="informations-container">
      <h2 class="title"><%= @planetoffer.name %></h2>
      <p class="sub-title">Gravité : <%= @planetoffer.gravite %> m/s²</p>
      <p class="sub-title">Superficie : <%= @planetoffer.superficie %> M km²</p>
      <p class="sub-title">Rayon : <%= @planetoffer.rayon %> km</p>
      <p class="sub-title">Localisation : <%= @planetoffer.location %></p>
      <div class="more-information">
        <div class="info-and-date-container">
          <div class="box price">
            <p class="price"><svg class="icon" style="width:24px;height:px" viewBox="0 0 24 24">
              <path fill="currentColor" d="M3,6H21V18H3V6M12,9A3,3 0 0,1 15,12A3,3 0 0,1 12,15A3,3 0 0,1 9,12A3,3 0 0,1 12,9M7,8A2,2 0 0,1 5,10V14A2,2 0 0,1 7,16H17A2,2 0 0,1 19,14V10A2,2 0 0,1 17,8H7Z" />
            </svg></p>
            <p class="fonts-size"><%= @planetoffer.price %> M €</p>
          </div>
        </div>
    </div>
  </li>
</ul>
